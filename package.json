{
  "name": "sum-react",
  "version": "0.0.2",
  "description": "基于 React 的业务组件库",
  "private": false,
  "license": "MIT",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "homepage": "https://leitingting08.github.io/react-components/",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "doc": "styleguidist server",
    "build": "rimraf lib && cross-env NODE_ENV=production rollup -c",
    "build:watch": "rimraf lib && rollup -c -w",
    "build:dev": "rimraf lib && rollup -c",
    "build_doc": "rimraf dist_docs && styleguidist build",
    "commit": "git-cz",
    "release": "standard-version",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "pub": "npm run build && npm publish"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@babel/core": "^7.12.9",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/react": "^16.9.46",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/parser": "^4.9.1",
    "@umijs/fabric": "^2.3.1",
    "antd": "^4.9.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.0",
    "babel-preset-react-app": "^9.1.2",
    "commitizen": "^4.1.2",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.1",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.15.0",
    "husky": "^4.2.5",
    "less": "^3.12.2",
    "less-loader": "^6.2.0",
    "lint-staged": ">=10",
    "plop": "^2.7.4",
    "postcss": "^8.2.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-docgen-typescript": "^1.20.1",
    "react-dom": "^16.13.1",
    "react-styleguidist": "^11.0.8",
    "rollup": "^2.23.1",
    "standard-version": "^9.0.0",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1"
  },
  "peerDependencies": {
    "antd": "^4.5.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "components/**/*.{js,ts}?(x)": [
      "prettier --write",
      "git add"
    ],
    "components/**/*.less": [
      "stylelint --syntax less --fix",
      "git add"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
